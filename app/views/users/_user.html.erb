<h2>User info</h2>

  <%= attachment_image_tag user, :profile_image, format: "jpeg", fallback: "no_image.jpg", size: "100x100" %>
  <table class="table">
    <tbody>
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
         <th>introduction</th>
         <th><%= user.introduction %></th>
       </tr>
    </tbody>
  </table>


  <div class="row">
    <% if user == current_user %>
      <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
      ã€€<i class="fas fa-user-cog"></i>
      <% end %>
    <% end %>

    <% unless current_user == user %>
      <% if current_user.following?(user) %>
         <%= link_to "Unfollow", user_relationships_path(user.id), method: :delete %>
      <% else %>
         <%= link_to "Follow", user_relationships_path(user.id), method: :post %>
      <% end %>
    <% end %>


  </div>



